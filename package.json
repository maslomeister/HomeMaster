  "repository": {
    "type": "git",
    "url": "git+https://github.com/Tormak9970/HomeMaster.git"
  },
  "keywords": [
    "decky",
    "plugin",
    "steam-deck",
    "menus",
    "qam"
  ],
  "contributors": [
    {
      "name": "Travis Lane (Tormak)",
      "email": "Tormak9970@gmail.com"
    }
  ],
  "license": "GPL-3",
  "bugs": {
    "url": "https://github.com/Tormak9970/HomeMaster/issues"
  },
  "homepage": "https://github.com/Tormak9970/HomeMaster#readme",
  "devDependencies": {
    "@decky/rollup": "^1.0.0",
    "@rollup/rollup-linux-x64-musl": "^4.21.0",
    "@types/react": "18.3.3",
    "@types/react-dom": "18.3.0",
    "@types/webpack": "^5.28.5",
    "rollup": "^4.18.0",
    "typescript": "^5.5.3"
  },
  "dependencies": {
    "@decky/api": "^1.0.5",
    "@decky/ui": "^4.7.1",
    "react-icons": "^5.2.1",
    "tslib": "^2.6.3"
  },
  "pnpm": {
